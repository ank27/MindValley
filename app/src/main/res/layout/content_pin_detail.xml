<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:id="@+id/scrollViewDetail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:clipToPadding="false"
    android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/detailCardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="8dp"
        android:layout_margin="16dp"
        android:elevation="2dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:id="@+id/categoryInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/titleUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                style="@style/TextViewAppearanceMediumBold"
                android:text="User Info"/>
            <RelativeLayout
                android:id="@+id/usernameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_below="@+id/titleUserInfo">
                <TextView
                    android:id="@+id/usernameText"
                    android:text="Username :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextViewAppearanceMediumBold"/>
                <TextView
                    android:id="@+id/username"
                    android:layout_toRightOf="@+id/usernameText"
                    android:text="Ankur"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextViewAppearanceMedium"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usernameLayout">
                <TextView
                    android:id="@+id/categoryText"
                    android:layout_margin="8dp"
                    android:text="Name :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextViewAppearanceMediumBold"/>
                <TextView
                    android:id="@+id/category"
                    android:layout_toRightOf="@+id/categoryText"
                    android:layout_margin="8dp"
                    android:text="Nature"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextViewAppearanceMedium"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/linkLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="8dp"
        android:layout_margin="16dp"
        android:elevation="2dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:id="@+id/linkInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/linkText"
                android:text="Link:"
                style="@style/TextViewAppearanceMediumBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
           <ImageView
               android:id="@+id/linkImage"
               android:layout_below="@+id/linkText"
               android:layout_margin="10dp"
               android:src="@drawable/ic_empty"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
